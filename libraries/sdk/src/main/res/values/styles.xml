<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinkText">
        <!-- Only set the link colors, not the default text color -->
        <item name="android:textColorLink">@color/fastcomments_link_color</item>
        <item name="android:textColorHighlight">@color/fastcomments_link_color_pressed</item>
    </style>
    
    <style name="FeedActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:includeFontPadding">true</item>
    </style>
</resources>